---
import Image from "astro/components/Image.astro";
---

<section class="border-b-2 border-gray-400 pb-12 mb-12">
  <Image
    src="/images/novios-2.webp"
    alt="Foto de Christian y Karen"
    class="w-full h-[90vh] object-cover object-center mb-6"
    width="1920"
    height="1080"
    loading="lazy"
  />
  <div class="container mx-auto my-12">
    <div class="flex gap-24 justify-center">
      <div class="flex flex-col items-center text-center gap-2">
        <img src="/icons/church.webp" alt="Ceremonia" class="w-32 h-auto" />
        <h3 class="font-semibold text-xl">CEREMONIA</h3>
        <p class="max-w-xs mx-auto">
          07:00 P.M. <br />
          IGLESIA SANTA LUCÍA<br />
          FERREÑAFE
        </p>
        <button class="rounded-md bg-primary text-white px-4 py-2"
          >VER MAPA</button
        >
      </div>
      <div class="flex flex-col items-center text-center gap-2">
        <img src="/icons/glass.webp" alt="Recepción" class="w-32 h-auto" />
        <h3 class="font-semibold text-xl">RECEPCIÓN</h3>
        <p class="max-w-xs mx-auto mb-6">
          09:30 P.M. <br />
          FUNDO HERNANDITO<br />
        </p>
        <button class="rounded-md bg-primary text-white px-4 py-2"
          >VER MAPA</button
        >
      </div>
    </div>
  </div>
</section>
